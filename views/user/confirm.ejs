    <!--================ confirmation part start =================-->
    <section class="confirmation_part padding_top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <a class="btn_1" href="/shop">Continue Shopping</a>

                    <div class="confirmation_tittle">
                        <span style=" color: green;">Thank you. Your order has been received.</span>
                    </div>
                </div>
                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>order info</h4>
                        <ul>
                            <li>
                                <p>order Id</p><span>:<%= order._id%></span>
                            </li>
                            <li>
                                <p>data</p><span>:<%=new Date (order.date).toLocaleDateString('en-US', { weekday: 'long'
                                        , month: 'long' , day: 'numeric' , year: 'numeric' , hour: '2-digit' ,
                                        minute: '2-digit' , hour12: true })%></span>
                            </li>
                            <li>
                                <p>total</p><span>: <%= order.total_amount %></span>
                            </li>
                            <li>
                                <p>payment method</p><span>:<%= order.payment%></span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-6 col-lx-4">
                    <!-- <div class="single_confirmation_details">
            <h4>shipping Address</h4>
