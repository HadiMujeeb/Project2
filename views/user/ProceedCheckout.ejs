            <script>

                // Declare addressId variable in a higher scope accessible to both functions
                let addressId = null;

                // Function to handle selecting an address
                function selectAddress(selectedId) {
                    // Remove tick mark from previously selected address
                    const previousSelectedIcon = document.querySelector('.selected');
                    if (previousSelectedIcon) {
                        previousSelectedIcon.innerHTML = ""
                        previousSelectedIcon.classList.remove('selected');
                    }

                    // Add tick mark to the currently selected address
                    const selectedIcon = document.getElementById('selectedIcon_' + selectedId);
                    selectedIcon.innerHTML = '&#10004;'; // Unicode for tick mark
                    selectedIcon.classList.add('selected');

                    // Set the addressId variable to the selectedId
                    addressId = selectedId;
                }

                let paymentMethod = null; // Declare paymentMethod variable in a higher scope accessible to both functions

                // Function to handle selecting a payment method
                function handlePaymentSelection(radioButton) {
                    paymentMethod = radioButton.value; // Set the paymentMethod variable to the selected payment method
                }
                // Function to handle the click event on the "Proceed to Paypal" button
                $(document).ready(function () {
                    $('.btn_3').click(function (event) {
                        event.preventDefault(); // Prevent the default action of the button

                        // Check if addressId is not null
                        if (addressId !== null && paymentMethod !== null) {
                            // Fetch the total price
                            const totalPrice = '<%= TotalPrice %>';

                            // Make AJAX request with addressId and total price
                            $.ajax({
                                url: "/CompleteCheckout",
                                method: "post",
                                data: {
                                    addressId: addressId, // Use the addressId variable here
                                    totalPrice: totalPrice,
                                    paymentMethod: paymentMethod// Include the total price in the data object
                                },
                                success: function (response) {
                                    // Handle success respons
                                    console.log(response);
                                    if (response.success && response.order) {
                                        // Access order data
                                        var order = response.order;
                                        console.log("Order:", order);

                                        // Redirect to the '/confirm' page or perform any other action
                                        window.location.href = '/confirm?orderId='+ encodeURIComponent(order);
                                    } else {
                                        console.error("Checkout failed:", response.error);
                                        // Handle the failure scenario here
                                    }

                                },
                                error: function (xhr, status, error) {
                                    // Handle error response
                                    console.error(xhr.responseText);
                                }
                            });
                        } else {
                            // Handle the case where no address is selected
                            console.error("No address selected");
                        }
                    });
                });
            </script>


