                                            </td>
                                            <!-- <td>
                                                <%= users[i].mobile%>
                                            </td> -->


                                            <td class="text">
                                                <% if (users[i].isBlocked==false) { %>
                                                    <span class="badge rounded-pill alert-warning">Inactive</span>
                                                    <% } else { %>
                                                        <span class="badge rounded-pill alert-success">Active</span>
                                                        <% } %>
                                            </td>

                                            <td class="text-end">
                                                <% if (users[i].isBlocked==false) { %>
                                                    <button class="btn btn-md rounded font-sm"
                                                        onclick="unblockUser('<%=users[i]._id %>')">Unblock</button>
                                                    <% } else { %>
                                                        <button class="btn btn-md rounded font-sm"
                                                            onclick="blockUser('<%=users[i]._id %>')"
                                                            style="background-color: red;">Block</button>
                                                        <% } %>
                                            </td>
                                        </tr>

                                        <% } %>
                                            <% }else{%>

                                                <tr>
                                                    <td colspan="5">Users Not Found</td>
                                                </tr>
                                                <% } %>

                            </tbody>
                        </table>
