                            </thead>
                            <tbody>



                                <% if(products.length> 0){ %>

                                    <% for(let i=0 ;i< products.length ;i++){ %>



                                        <tr>
                                            <td>
                                                <img src="/WebImages/<%= products[i].image[0] %>" alt="" width="40"
                                                    height="40">
                                            </td>



                                            <td>
                                                <%= products[i].name%>
                                            </td>


                                            <td>
                                                <%= products[i].stockQuantity %>
                                            </td>

                                            <% if(products[i].Offer){ %>
                                                <td>
                                                    <del> $<%= products[i].price %></del><br>
                                                    $<%= products[i].price - ((products[i].price *
                                                        products[i].Offer.percentage / 100).toFixed(2)) %>

                                                </td>
                                                <%}else{%>
                                                    <td>
                                                        $<%= products[i].price %>

                                                    </td>
                                                    <%}%>

                                                        <td>
                                                            <%= products[i].category.name %>
                                                        </td>
                                                        <% if (products[i].Offer) { %>
                                                            <td class="text-end">
                                                                <button onclick="OfferDelete('<%= products[i]._id %>')"
                                                                    class="btn btn-primary rounded font-sm">Remove</button><br>
                                                                <%= products[i].Offer.name%>(<%=
                                                                        products[i].Offer.percentage%>%)

                                                            </td>


                                                            <%}else{%>
                                                                <td class="text-end">
                                                                    <button type="button"
                                                                        class="btn btn-primary rounded font-sm"
                                                                        onclick="showModal('<%= products[i]._id%>')">Apply
                                                                        Offer</button>

                                                                </td>

                                                                <%}%>





                                                                    <td>
                                                                        <% if(products[i].is_Listed) { %>
                                                                            <span
                                                                                class="badge rounded-pill alert-success">

                                                                                Listed
                                                                            </span>
                                                                            <% }else{ %>
                                                                                <span
                                                                                    class="badge rounded-pill alert-success"
                                                                                    style="background-color: lightcoral;">

                                                                                    unlisted
                                                                                </span>
                                                                                <% } %>
                                                                    </td>

                                                                    <td>
                                                                        <%= new
                                                                            Date(products[i].date).toLocaleDateString()
                                                                            %>
                                                                    </td>




                                                                    <!-- <td class="text-end">
                                                <button onclick="confirmDelete('<%= products[i]._id %>')"
                                                    class="btn btn-md rounded font-sm">Delete</button>
                                            </td> -->
                                                                    <td class="text-end">
                                                                        <a href="EditProduct?id=<%= products[i]._id%>"
                                                                            class="btn btn-md rounded font-sm">Edit</a>
                                                                    </td>
                                                                    <% if (products[i].is_Listed===false) { %>
