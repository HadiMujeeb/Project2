                                            <!-- <button class="btn btn-primary">Apply</button> -->
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="modal-body">
                                    <h4>Offer is not found</h4>
                                </div>
                                <% } %>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                    </div>
            </div>
        </div>
