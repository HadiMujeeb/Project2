    <script>

        function validateForm() {
            var productName = document.getElementById("product_name").value;
            var price = document.getElementsByName("price")[0].value;
            var quantity = document.getElementsByName("Quantity")[0].value;
            var description = document.getElementById("description").value;

            var imageInput = document.getElementById("productImage");

            // Check if the image field is empty

            // if (productName === "" || price === "" || quantity === "" || description === "") {
            //     alert("Please fill in all fields");
            //     return false;
            // }
            if (productName.trim().length === 0 || productName.length > 20 || productName.endsWith(' ')) {
                document.getElementById('nameError').innerHTML = 'Name should not end with a space';
                document.getElementById('nameError').style.color = "red";
                return false;
            }
            else {
                document.getElementById("nameError").innerHTML = '';
            }
            if (description.trim().length === 0 || description.endsWith(' ')) {
                document.getElementById("descriptionError").innerHTML = 'Description cannot be empty';
                document.getElementById("descriptionError").style.color = "red";
                return false;
            } else {
                document.getElementById("descriptionError").innerHTML = '';

            }
            if (!/^\d+(\.\d+)?$/.test(price)) {
                document.getElementById("priceError").innerHTML = 'Please enter a valid numeric price';
                document.getElementById('priceError').style.color = "red";
                return false;
            } else {
                // Reset the error message when the validation passes
                document.getElementById("priceError").innerHTML = '';
            }

            if (!/^\d+(\.\d+)?$/.test(quantity)) {
                document.getElementById("quantityError").innerHTML = 'Please enter a valid numeric price';
                document.getElementById('quantityError').style.color = "red";
                return false;
            } else {
                // Reset the error message when the validation passes
                document.getElementById("priceError").innerHTML = '';
            }
            if (imageInput.files.length < 4) {
                document.getElementById("imageError").innerHTML = `You must select 4 images. You selected only ${imageInput.files.length}.`;
                document.getElementById('imageError').style.color = "red";
                return false;
            }

            var allowedTypes = ["image/avif", "image/avif", "image/avif", "image/avif"];
            for (var i = 0; i < imageInput.files.length; i++) {
                var file = imageInput.files[i];
                if (!allowedTypes.includes(file.type)) {
                   
                    document.getElementById("imageError").innerHTML = `Please select valid image files (JPEG, PNG, GIF) for image ${i + 1}.`;
                    document.getElementById('imageError').style.color = "red";
                    return false;
                }
            }
            return true;
        }


    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get the file input element
            const fileInput = document.getElementById('productImage');

            // Get the image preview container
            const imagePreviewContainer = document.getElementById('imagePreview');

            // Add an event listener to the file input
            fileInput.addEventListener('change', function () {
                // Remove existing preview images
                imagePreviewContainer.innerHTML = '';

                // Loop through selected files and create image previews
                for (const file of fileInput.files) {
                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file);
                    img.className = 'img-sm img-thumbnail mr-2';
                    img.alt = 'Image Preview';
                    img.style.width = '80px';
                    img.style.height = '80px';
                    imagePreviewContainer.appendChild(img);
                }
            });
        });
    </script>

