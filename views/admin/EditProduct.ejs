    <script>
        const deleteImage = async (event, image, prdtId, index) => {
            try {
                event.preventDefault();

                // Use standard browser confirmation dialog
                const userConfirmed = window.confirm('Are you sure you want to delete this image?');

                if (userConfirmed) {
                    await confirmDeleteImage(image, prdtId, index);
                }
            } catch (error) {
                console.error("Error showing confirmation dialog:", error.message);
                // Handle errors if necessary
            }
        }

        async function confirmDeleteImage(image, prdtId, index) {
            try {
                console.log(image);
                console.log(prdtId);
                console.log(index);
                const deleted = await axios.patch("/deleteImage", {
                    image,
                    prdtId,
                    index
                });

                if (deleted.data.success) {
                    window.location.reload();
                    console.log("Item has been removed.");
                    const imageContainer = document.getElementById(`pdtImage_${index}`);
                    imageContainer.style.display = "none";
                    window.location.reload();
                } else {
                    console.log("Failed to remove item. Check console for details.");
                    // Handle failure if necessary
                }
            } catch (error) {
                console.error("Error deleting image:", error.message);
                // Handle errors if necessary
            }
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get the file input element
            const fileInput = document.getElementById('productImage');

            // Get the image preview container
            const imagePreviewContainer = document.getElementById('imagePreview');

            // Add an event listener to the file input
            fileInput.addEventListener('change', function () {
                // Remove existing preview images
                imagePreviewContainer.innerHTML = '';

                // Loop through selected files and create image previews
                for (const file of fileInput.files) {
                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file);
                    img.className = 'img-sm img-thumbnail mr-2';
                    img.alt = 'Image Preview';
                    img.style.width = '80px';
                    img.style.height = '80px';
                    imagePreviewContainer.appendChild(img);
                }
            });
        });


        function validateForm() {
            var productName = document.getElementById("productName").value;
            var price = document.getElementsByName("price")[0].value;
            var quantity = document.getElementById("quantity").value;
            var imageInput = document.getElementById("productImage");

            
            // if (imageInput.files.length < 4) {
            //     alert(`image must be  4 it only ${imageInput.files.length}`);
            //     return false;
            // }
            if (productName === "" || price === "" || quantity === "" ) {
                alert("Please fill in all fields");
                return false;
            }
            if (!/^[a-zA-Z][a-zA-Z0-9]*$/.test(productName)) {
                document.getElementById('nameError').innerHTML = 'Name should start with an alphabet then only contain alphabets and numbers (no Spaces)';
                document.getElementById('nameError').style.color = "red";
                return false;
            }else{
                document.getElementById("nameError").innerHTML = '';
            }

            if (!/^\d+(\.\d+)?$/.test(price)) {
                document.getElementById("priceError").innerHTML = 'Please enter a valid numeric price';
                document.getElementById('priceError').style.color = "red";
                return false;
            } else {
                // Reset the error message when the validation passes
                document.getElementById("priceError").innerHTML = '';
            }

            if (!/^\d+(\.\d+)?$/.test(quantity)|| quantity<"0") {
                document.getElementById("quantityError").innerHTML = 'Please enter a valid numeric price';
                document.getElementById('quantityError').style.color = "red";
                return false;
            } else {
                // Reset the error message when the validation passes
                document.getElementById("quantityError").innerHTML = '';
            }
            return true;
        }


    </script>

